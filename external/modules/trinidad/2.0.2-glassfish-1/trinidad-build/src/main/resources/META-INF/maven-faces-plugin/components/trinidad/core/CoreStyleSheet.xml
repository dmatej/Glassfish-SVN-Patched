<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:trh="http://myfaces.apache.org/trinidad/html"
              xmlns:xi="http://www.w3.org/2001/XInclude"
              xmlns:mfp="http://myfaces.apache.org/maven-faces-plugin"
              xmlns:fmd="http://java.sun.com/xml/ns/javaee/faces/design-time-metadata">
  <component>
    <description><![CDATA[The styleSheet tag generates the style
          sheet link reference to a generated Apache Trinidad style sheet.
          This is automatically included for you if you use the Trinidad head tag.]]>
    </description>
    <icon>
      <small-icon>/org/apache/myfaces/trinidadinternal/metadata/icons/styleSheet.gif</small-icon>
    </icon>
    <component-type>org.apache.myfaces.trinidad.CoreStyleSheet</component-type>
    <component-class>org.apache.myfaces.trinidad.component.core.CoreStyleSheet</component-class>
    <component-extension>
      <mfp:component-family>org.apache.myfaces.trinidad.StyleSheet</mfp:component-family>
      <mfp:component-supertype>org.apache.myfaces.trinidad.ComponentBase</mfp:component-supertype>
      <mfp:renderer-type>org.apache.myfaces.trinidad.StyleSheet</mfp:renderer-type>
      <mfp:tag-name>trh:styleSheet</mfp:tag-name>
      <mfp:tag-class>org.apache.myfaces.trinidadinternal.taglib.core.CoreStyleSheetTag</mfp:tag-class>
      <mfp:long-description><![CDATA[The styleSheet component generates the style
          sheet link reference to a generated Apache Trinidad style sheet.
          This is automatically included for you if you use the Trinidad
          HtmlHead component.]]>
      </mfp:long-description>
      <mfp:author>Brian Albers</mfp:author>
      <mfp:component-metadata>
        <mfp:unsupported-agents>phone voice</mfp:unsupported-agents>
      </mfp:component-metadata>
      <mfp:uix2-local-name>styleSheet</mfp:uix2-local-name>
      <fmd:component-metadata>
        <fmd:hidden>true</fmd:hidden>
      </fmd:component-metadata>
    </component-extension>
  </component>
</faces-config>
