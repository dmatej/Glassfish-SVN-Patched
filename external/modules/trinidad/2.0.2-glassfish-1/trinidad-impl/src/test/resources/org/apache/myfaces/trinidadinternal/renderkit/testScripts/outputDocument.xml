<test xmlns="http://myfaces.apache.org/trinidad/test"
       xmlns:tr="http://myfaces.apache.org/trinidad">
  <base-component tr:type="org.apache.myfaces.trinidad.CoreOutputDocument" value="Text"/>
  
  <!-- only test all the facets once in outputDocument-facets.xml, otherwise page test is giant. -->  

  <attribute-test name="value" value="&lt;p&gt;paragraph&lt;/p&gt;"/>
  <attribute-test name="value" value="&lt;b&gt;bold&lt;/b&gt;"/>
  <attribute-test name="value" value="&lt;i&gt;italic&lt;/i&gt;"/>
  <attribute-test name="value" value="&lt;tt&gt;tt&lt;/tt&gt;"/>
  <attribute-test name="value" value="&lt;big&gt;big&lt;/big&gt;"/>
  <attribute-test name="value" value="&lt;small&gt;small&lt;/small&gt;"/>
  <attribute-test name="value" value="&lt;pre&gt;pre&lt;/pre&gt;"/>
  <attribute-test name="value" value="&lt;span&gt;span&lt;/span&gt;"/>
  <attribute-test name="value" value="&lt;span class=&quot;foo&quot;&gt;span with class&lt;/span&gt;"/>
  <attribute-test name="value" value="&lt;a href=&quot;foo&quot;&gt;a with href&lt;/a&gt;"/>

  <attribute-test name="value" value="&lt;span bogus=&quot;foo&quot;&gt;span with bogus attr&lt;/span&gt;"/>

  <attribute-test name="value" value="Text on&lt;br&gt;two lines"/>
  <attribute-test name="value" value="Separated&lt;hr&gt;text"/>
  <attribute-test name="value" value="&lt;ol&gt;&lt;li&gt;one&lt;li&gt;two&lt;/ol&gt;"/>
  <attribute-test name="value" value="&lt;ul&gt;&lt;li&gt;one&lt;li&gt;two&lt;/ul&gt;"/>

  <attribute-test name="value" value="Text with &amp;lt;"/>
  <attribute-test name="value" value="Text with &amp;gt;"/>
  <attribute-test name="value" value="Text with &amp;amp;"/>
  <attribute-test name="value" value="Text with &amp;reg;"/>
  <attribute-test name="value" value="Text with &amp;copy;"/>
  <attribute-test name="value" value="Text with &amp;nbsp;"/>
  <attribute-test name="value" value="Text with &amp;quot;"/>
  <attribute-test name="value" value="Text with ignored entity &amp;ignored;"/>
  
  <attribute-test name="id"/>
  <attribute-test name="styleClass"/>
  <attribute-test name="inlineStyle"/>
  <attribute-test name="shortDesc"/>
  <js-test/>
</test>
