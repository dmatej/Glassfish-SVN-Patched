<test xmlns="http://myfaces.apache.org/trinidad/test"
       xmlns:tr="http://myfaces.apache.org/trinidad">
  <base-component tr:type="org.apache.myfaces.trinidad.CoreSelectBooleanCheckbox" />
  <attribute-test name="accessKey" value="a"/>
  <boolean-test name="autoSubmit"/>  
  <attribute-test name="autoSubmit" value="true">  
    <attribute-test name="immediate" value="true"/>
  </attribute-test>
  <boolean-test name="disabled"/>
  <attribute-test name="label"/>
  <boolean-test name="readOnly"/> 
  <boolean-test name="required"/>
  <!--attribute-test name="requiredMessageDetail" value="Required"/-->
  <boolean-test name="selected"/>  
  <attribute-test name="text"/>
  <attribute-test name="text" value="textAttr">
    <attribute-test name="accessKey" value="e"/>
    <attribute-test name="inlineStyle" value="color:red"/>
    <attribute-test name="styleClass"/>
  </attribute-test>
  <!--attribute-test name="textAndAccessKey" value="T&amp;ext" /--> 
  <boolean-test name="showRequired"/>
  <attribute-test name="id"/>
  <attribute-test name="shortDesc"/>
  <js-test/>
</test>
