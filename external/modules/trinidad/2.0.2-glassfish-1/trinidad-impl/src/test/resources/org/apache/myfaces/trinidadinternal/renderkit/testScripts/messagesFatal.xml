<test xmlns="http://myfaces.apache.org/trinidad/test"
       xmlns:tr="http://myfaces.apache.org/trinidad">
  <base-component tr:type="org.apache.myfaces.trinidad.CoreMessages"/>

  <message summary="message summary" detail="message detail" severity="fatal"/>
  <attribute-test name="id" value="id_val"/>
  <attribute-test name="inlineStyle"
                  value="background-color:red"/>
  <attribute-test name="message" value="message_val"/>
  <!-- In minimal none of these generate anything interesting -->
  <attribute-test name="messageType" value="error" matchesBase="true"/>
  <!-- attribute-test name="messageType" value="warning"/-->
  <!-- attribute-test name="messageType" value="info"/-->
  <!-- attribute-test name="messageType" value="none"/-->
  <attribute-test name="shortDesc" value="shortDesc_val"/>
  <attribute-test name="styleClass" value="styleClass_val"/>
  <attribute-test name="text" value="text_val"/>
  <!-- boolean-test name="automatic"/ -->
  <!-- The globalOnly attribute will always match base because -->
  <!-- we only have global messages in the test harness.       -->
  <!-- boolean-test name="globalOnly"/ -->
</test>
