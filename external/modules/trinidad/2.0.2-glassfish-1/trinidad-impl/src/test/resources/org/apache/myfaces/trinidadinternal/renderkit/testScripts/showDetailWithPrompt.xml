<?xml version="1.0" encoding="windows-1252" ?>
<test xmlns="http://myfaces.apache.org/trinidad/test"
       xmlns:tr="http://myfaces.apache.org/trinidad">
  <base-component tr:type="org.apache.myfaces.trinidad.CoreShowDetail">
     <component tr:facet="prompt" tr:type="org.apache.myfaces.trinidad.CoreOutputText" value="promptText"/>
     <component tr:type="org.apache.myfaces.trinidad.CoreOutputText" value="detailText"/>
  </base-component>  
 
  <attribute-test name="undisclosedText" matchesBase="true"/>  
  <!-- <boolean-test name="selected" default="false"/> -->
  <boolean-test name="disclosed" default="false"/>  
  
  <!-- core attributes -->
   <attribute-test name="id" value="sDetailId"/>
  
   <attribute-test name="shortDesc" value="myDetail"/>
   <attribute-test name="styleClass" value="myStyleClass"/>
   <attribute-test name="inlineStyle" value="background-color:red"/>
   
   <!-- javascript -->
   <js-test/> 
</test>
