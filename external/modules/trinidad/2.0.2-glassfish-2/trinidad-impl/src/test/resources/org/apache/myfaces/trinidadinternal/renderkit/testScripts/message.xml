<test xmlns="http://myfaces.apache.org/trinidad/test"
       xmlns:tr="http://myfaces.apache.org/trinidad">
  <base-component tr:type="org.apache.myfaces.trinidad.CoreMessage" for="other"/>

  <message summary="message summary" detail="message detail" severity="error"
           clientId="other"/>

  <attribute-test name="message" value="message_val"/>
  <attribute-test name="id" value="id_val" matchesBase="true"/>
  <attribute-test name="messageType" value="error"  matchesBase="true"/>
  <attribute-test name="messageType" value="warning"/>
  <attribute-test name="messageType" value="info"/>
  <attribute-test name="messageType" value="none"/>
  <attribute-test name="shortDesc" value="shortDesc_val"/>
  <attribute-test name="styleClass" value="someStyle"/>
  <attribute-test name="inlineStyle" value="background-color:red"/>
  <js-test/>
</test>
