<test xmlns="http://myfaces.apache.org/trinidad/test"
       xmlns:tr="http://myfaces.apache.org/trinidad">
  <base-component tr:type="org.apache.myfaces.trinidad.CorePanelButtonBar">
    <component tr:type="org.apache.myfaces.trinidad.CoreCommandButton" text="button 1"/>
    <component tr:type="org.apache.myfaces.trinidad.CoreCommandButton" text="button 2"/>
    <component tr:type="org.apache.myfaces.trinidad.CoreCommandButton" text="button 3"/>
  </base-component>
  
  <!-- Core attribute tests -->
  <attribute-test name="id"/>
  <attribute-test name="inlineStyle"/>
  <boolean-test name="rendered"/>
  <attribute-test name="shortDesc"/>
  <attribute-test name="styleClass"/>
  <attribute-test name="halign" value="right"/>
  <attribute-test name="halign" value="start" matchesBase="true"/>
  <attribute-test name="halign" value="left" matchesBase="true"/>
  <attribute-test name="halign" value="end"/>
  <attribute-test name="halign" value="center"/>
  
  <js-test/>
</test>
