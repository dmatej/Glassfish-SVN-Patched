<?xml version="1.0" encoding="iso-8859-1"?>
<!-- hk2 depends on tiger-types artifact -->

<project name="metainf-services source integration" default="build" basedir=".">

    <!-- import build.xml for init target and inherited properties -->
    <import file="build.xml"/>

    <target name="build" depends="init">
        <antcall target="metainf-services.build" />
    </target>

    <!--
        Checkout tiger-types source and build
    -->
    <target name="metainf-services.checkout" >
        <echo message="checkout metainf-services from ${metainf-services.svn.url}."/>
        <exec executable="svn" dir="${external.dir}" failonerror="true" >
	    <arg line="checkout" />
            <arg line="${metainf-services.svn.url}" />
            <arg line="--username" />
            <arg line="guest" />
            <arg line="metainf-services" />
	</exec>
    </target>
    <target name="metainf-services.build" depends="metainf-services.checkout" >
        <!-- build metainf-services -->
        <exec executable="mvn" dir="${external.dir}/metainf-services" failonerror="true" >
	    <arg line="-Dmaven.repo.local=${maven.repo.local}" />
            <arg line="install" />
	</exec>
    </target>
</project>
